function setup() {
  createCanvas(400, 400);
  background(51);
  pos = createVector(200,200);
  console.log(pos);
}

function draw() {
  stroke(255);
  strokeWeight(2);
  point(pos.x,pos.y);
  
  var step = p5.Vector.random2D();
  // pos = pos + step;
  pos.add(step);
}



